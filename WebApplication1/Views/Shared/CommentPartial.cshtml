@model IEnumerable<ShoppingCart.Application.ViewModels.CommentViewModel>

<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4">
            <div class="card text-center" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Comment: @item.CommentText</li>
                    <li class="list-group-item">Owner: @item.CommenterId</li>
                </ul>
            </div>
            <br />
        </div>
    }
</div>